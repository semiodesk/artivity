{
	"manifest_version": 2,

	"name": "Artivity",
	"description": "Allows for tracking the webpages you visit in the Artivity Journal.",
	"version": "1.0.2",

	"agent": "http://www.google.com/chrome/browser/desktop",
	"endpoint": "http://localhost:8272/artivity/api/1.0",

	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},

	"browser_action": {
		"default_icon": "icon-enabled.png",
		"default_popup": "popup.html"
	},

	"background": {
		"scripts": ["background.js"]
	},

	"permissions": [
    "tabs",
    "activeTab",
    "http://localhost/",
    "http://localhost:8272/"
  ]
}